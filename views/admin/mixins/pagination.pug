mixin pagination(pagination)
    nav 
        ul(class="pagination")
            li(class="page-item")
                if(pagination.currentPage-1>0)
                    button(
                        class="page-link"
                        button-pagination= pagination.currentPage -1
                    ) Trang trước
                else 
                    button(
                        class="page-link"
                        button-pagination= 1
                    ) Trang đầu
            - for( let i=1; i<= pagination.totalPage; i++)
                if(i=== pagination.currentPage)
                    li(class="page-item active")
                        button(
                            class="page-link"
                            button-pagination= i
                        ) #{i}
                else 
                    li(class="page-item")
                        button(
                            class="page-link"
                            button-pagination= i     
                        ) #{i}
            //- để có thể click và lấy ra button đang click thay thế cho innerHTML    
            li(class="page-item")
                if(pagination.currentPage <pagination.totalPage )
                    button(
                        class="page-link"
                        button-pagination= pagination.currentPage +1
                    ) Kế tiếp
                else 
                    button(
                        class="page-link"
                        button-pagination= pagination.totalPage
                    ) Trang cuối