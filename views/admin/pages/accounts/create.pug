extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permission.includes("accounts_create"))
        h1(class="mb-4") Thêm mới tài khoản 
        +alert-error(5000)
        +alert-success(5000)

        form(
            action= `${PATH_ADMIN}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại 
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar" style="display: block;") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    upload-image-preview
                    id="preview" 
                    src="" 
                    alt="Ảnh của tôi"
                    style="margin-right: 10px"
                )
                p(
                    close-preview
                ) Close
            div(class="form-group")
                label(for="role_id") Phân quyền
                select(
                    name="role_id"
                    id="role_id"
                    class="form-control"
                )
                    option(disabled) -- Chọn --
                    each role in roles 
                        option(value= role.id) #{role.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới   
    else 
        h1(class="text-center") Bạn không có quyền truy cập trang này
        