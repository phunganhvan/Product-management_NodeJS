extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permission.includes("accounts_edit"))
        h1(class="mb-4") Chỉnh sửa tài khoản 
        +alert-error(5000)
        +alert-success(5000)

        form(
            action= `${PATH_ADMIN}/accounts/edit/${record.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="mb-3")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                    value=record.fullName
                )
            div(class="mb-3")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                    value= record.email
                )
            div(class="mb-3")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            div(class="mb-3")
                label(for="phone") Số điện thoại 
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value= record.phone
                )
            div(
                class="mb-3"
                upload-image
            )
                label(for="avatar" style="display: block;") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    upload-image-preview
                    id="preview" 
                    src=record.avatar 
                    alt="Ảnh của tôi"
                    style="margin-right: 10px"
                )
                p(
                    close-preview
                ) Close
            div(class="mb-3")
                label(for="fullName") Phân quyền
                select(
                    name="role_id"
                    id="role_id"
                    class="form-control"
                )
                    option(disabled) -- Chọn --
                    each item in roles
                        option(
                            value= item.id 
                            selected=(item.id== record.role_id ? true : false)
                        ) #{item.title}
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(record.status ==="active"? true: false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(record.status ==="inactive"? true: false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="mb-3")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else 
        h1(class="text-center") Bạn không có quyền truy cập trang này
        