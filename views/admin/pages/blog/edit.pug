extend ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
    if(1)
        h1(class="mb-4") Chỉnh sửa bài viết
        +alert-error(3000)
        +alert-success(3000)
        form(
            action=`${PATH_ADMIN}/blogs/edit/${blog.id}?_method=PATCH` 
            id="form-edit-blog"
            method="POST"
            enctype="multipart/form-data"
        ) 
            div(class="mb-3")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value= blog.title
                )
            div(class="mb-3")
                label(for="blog_category_id") Danh mục
                select(
                    class="form-control"
                    id="blog_category_id"
                    name="blog_category_id"
                )
                    option(value="") -- Chọn loại danh mục --
                    if(category)
                        +select-tree(category,1 , blog.blog_category_id)
            div(class="mb-3") Sản phẩm nổi bật
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="featured1"
                    name="featured"
                    value="1"
                    checked= (blog.featured== "1"? true: false)
                )
                label(for="featured1" class="form-check-label") Có
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="featured0"
                    name="featured"
                    value="0"
                    checked= (blog.featured== "0"? true: false)
                )
                label(for="featured0" class="form-check-label") Không 
            div(class="mb-3")
                label(for="summary") Mô tả ngắn
                textarea(
                    class="form-control"
                    id="summary"
                    name="summary"
                    rows="5"
                    value=blog.summary
                ) #{blog.summary}
            div(class="mb-3")
                label(for="content") Nội dung
                textarea(
                    class="form-control textarea-mce"
                    id="content"
                    name="content"
                    rows="5"
                    value=blog.content
                ) #{blog.content}
            div(class="mb-3" upload-image)
                label(for="thumbnail" style="display: block;") Ảnh 
                input(
                    type= "file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    upload-image-preview
                    id="preview" 
                    src= blog.thumbnail 
                    alt="Ảnh của tôi"
                    style="margin-right: 10px"
                    defaultValue= blog.thumbnail
                )
                p(
                    close-preview
                ) Close
            div(class="mb-3")
                label(for="position") Vị trí
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Tự động tăng"
                    min="1"
                    value=blog.position
                )
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(blog.status== "active"? true: false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động 
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(blog.status== "inactive"? true: false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="mb-3")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else 
        h1(class="text-center") Bạn không có quyền truy cập trang này

    script(src="/admin/js/product.js") 
