extend ../../layouts/default.pug
include ../../mixins/alert.pug 

block main 
    h1 Trang dashboard
    +alert-success(5000)
    +alert-error(5000)

    .row.mt-4
        .col-12 
            .card.mb-4 
                .card-header Thông tin tài khoản 
                .card-body
                    .row
                        .col-6.text-center
                            if(user.avatar)
                                img(
                                    src=user.avatar
                                    style="height: 200px; margin-bottom: 15px"
                                )
                        .col-6
                            if(user.fullName)
                                p Họ tên: <b>#{user.fullName}</b>
                            if(user.email)
                                p Email: <b>#{user.email}</b>
                            if(user.phone)
                                p Số điện thoại: <b>#{user.phone}</b>
                            if(role.title)
                                p Phân quyền: <b>#{role.title}</b>
        
        .col-6 
            .card.mb-4 
                .card-header Danh mục sản phẩm 
                .card-body 
                    p Số lượng: <b>#{statistic.categoryProduct.total}</b>
                    p Hoạt động: <b>#{statistic.categoryProduct.active}</b>
                    p Ngừng hoạt động: <b>#{statistic.categoryProduct.inactive}</b>
                    p Đã bị xóa: <b>#{statistic.categoryProduct.deleted} </b>

        .col-6 
            .card.mb-4 
                .card-header Sản phẩm 
                .card-body 
                    p Số lượng: <b>#{statistic.product.total}</b>
                    p Hoạt động: <b>#{statistic.product.active}</b>
                    p Ngừng hoạt động: <b>#{statistic.product.inactive}</b>
                    p Đã bị xóa: <b>#{statistic.product.deleted} </b>
        .col-6 
            .card.mb-4 
                .card-header Danh mục bài viết 
                .card-body 
                    p Số lượng: <b>#{statistic.product.total}</b>
                    p Hoạt động: <b>#{statistic.product.active}</b>
                    p Ngừng hoạt động: <b>#{statistic.product.inactive}</b>
                    p Đã bị xóa: <b>#{statistic.categoryBlog.deleted} </b>

        .col-6 
            .card.mb-4 
                .card-header Bài viết 
                .card-body 
                    p Số lượng: <b>#{statistic.product.total}</b>
                    p Hoạt động: <b>#{statistic.product.active}</b>
                    p Ngừng hoạt động: <b>#{statistic.product.inactive}</b>
                    p Đã bị xóa: <b>#{statistic.blog.deleted} </b>

        .col-6 
            .card.mb-4 
                .card-header Tài khoản admin
                .card-body 
