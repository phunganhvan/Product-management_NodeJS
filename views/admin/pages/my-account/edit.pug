extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    h1(class="mb-4") Cập nhật thông tin cá nhân 
    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${PATH_ADMIN}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="mb-3")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required 
                value= user.fullName
            )
        div(class="mb-3")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required 
                value= user.email
            )
        div(class="mb-3")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="mb-3")
            label(for="phone") Số điện thoại 
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required 
                value= user.phone
            )
        div(class="mb-3" upload-image)
            label(for="avatar" style="display: block;") Ảnh 
            input(
                type= "file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                upload-image-preview
                id="preview" 
                src= user.avatar 
                alt="Ảnh của tôi"
                style="margin-right: 10px"
                defaultValue= user.avatar
            )
            p(
                close-preview
            ) Close
        div(class="mb-3")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật