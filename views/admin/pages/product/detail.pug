extends ../../layouts/default.pug
block main 
    if(role.permission.includes("products_view"))
        h1(class="mb-4") Chi tiết sản phẩm 
        
        if(product.title)
            h2(class="mb-4") #{product.title}
        if(product.product_category_id)
            div(class="mb-4")
                label(for="product_category_id") Danh mục: <b>#{category.title}</b>
        if(product.price)
            div(class="mb-4") Giá: <b>#{formatVND(product.price)} </b>
        if(product.discountPercentage)
            div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>
        if(product.stock)
            div(class="mb-4") Còn lại: <b>#{product.stock} </b>
        if(product.thumbnail)
            div(class="mb-4")
                img(
                    src=product.thumbnail 
                    style ="width: 100px"
                )
        if(product.status)
            div(class="mb-4")
                span Trạng thái: 
                if(product.status=== "active")
                    span(class="badge badge-success") Hoạt động
                else 
                    span(class="badge badge-danger") Dừng hoạt động
        if(product.position)
            div(class="mb-4") Vị trí: <b>#{product.position}</b>
        if(product.description)
            div(class="mb-4") !{product.description}
        row 
            col-12
                a(
                    href=`${PATH_ADMIN}/products/edit/${product.id}`
                    class="btn btn-warning btn-sm"
                ) Chỉnh sửa
        form(
            action=""
            method="POST"
            id="form-delete"
            data-path=`${PATH_ADMIN}/products/delete`
        )
    else 
        h1 Bạn không có quyền truy cập trang này
    script(src="/admin/js/product.js") 