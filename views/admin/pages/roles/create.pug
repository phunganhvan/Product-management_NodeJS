extends ../../layouts/default.pug 


block main 
    if(role.permission.includes("roles_create"))
        h1(class="mb-4") Thêm mới nhóm quyền 
        
        form(
            action=`${PATH_ADMIN}/roles/create`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tên nhóm quyền 
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"    
                    required
                )
            div(class="form-group")
                label(for="description") Mô tả 
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"    
                    rows="3"
                    required
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới
    else 
        h1(class="text-center") Bạn không có quyền truy cập trang này