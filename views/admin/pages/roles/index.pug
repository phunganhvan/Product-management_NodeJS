extends ../../layouts/default.pug 
include ../../mixins/alert.pug
block main 
    if(role.permission.includes("roles_view"))
        h1(class="mb-4") Nhóm quyền 
        +alert-error(3000)
        +alert-success(3000)
        .card.mb-3
            .card-header Danh sách 
            .card-body 
                .row
                    .col-8
                    .col-4.text-end
                        if(role.permission.includes("roles_create"))
                            a(
                                href=`${PATH_ADMIN}/roles/create` 
                                class="btn btn-outline-success"
                            ) Thêm mới
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT 
                            th Nhóm quyền 
                            th Mô tả ngắn 
                            th Hành động
                    tbody
                        if(records.length >0)
                            each item, index in records 
                                tr 
                                    td #{index + 1}
                                    td #{item.title}
                                    td #{item.description}
                                    td 
                                        a(
                                            class="btn btn-secondary btn-sm"
                                            href =`${PATH_ADMIN}/roles/detail/${item.id}`
                                        ) Chi tiết 
                                        if(role.permission.includes("roles_edit"))
                                            a(
                                                class="btn btn-warning btn-sm ml-1"
                                                href =`${PATH_ADMIN}/roles/edit/${item.id}`
                                            ) Sửa
                                        if(role.permission.includes("product_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                            ) Xóa   
                        else
                            tr 
                                td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo
    else 
        h1 Bạn không có quyền truy cập trang này