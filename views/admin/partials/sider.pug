.sider 
    .inner-menu 
        ul 
            li(class=currentPath.startsWith(`${PATH_ADMIN}/dashboard`) ? 'active' : '')
                a(href=`${PATH_ADMIN}/dashboard`) Tổng quan 

            if(role.permission.includes("products-category_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/product-category`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/product-category`) Danh mục sản phẩm  

            if(role.permission.includes("products_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/products`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/products`) Danh sách sản phẩm

            if(role.permission.includes("blog-category_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/blog-category`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/blog-category`) Danh mục bài viết

            if(1)
                li(class=currentPath.startsWith(`${PATH_ADMIN}/blogs`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/blogs`) Danh sách bài viết

            if(role.permission.includes("roles_view"))  
                li(class=currentPath.startsWith(`${PATH_ADMIN}/roles`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/roles`) Nhóm quyền

            if(role.permission.includes("permission_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/roles/permissions`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/roles/permissions`) Phân quyền

            if(role.permission.includes("accounts_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/accounts`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/accounts`) Danh sách tài khoản

            if(role.permission.includes("orders_view"))
                li(class=currentPath.startsWith(`${PATH_ADMIN}/orders`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/orders`) Danh sách đơn hàng

            if(1)
                li(class=currentPath.startsWith(`${PATH_ADMIN}/settings/general`) ? 'active' : '')
                    a(href=`${PATH_ADMIN}/settings/general`) Cài đặt chung
