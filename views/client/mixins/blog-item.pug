mixin blog-item(item)
  .col-md-4.mb-4.d-flex
    .blog-item.flex-fill.d-flex.flex-column.justify-content-between.rounded-4.shadow-lg.transition(
      style="background:#fff; border:none; overflow:hidden; transition: all 0.3s ease; height:100%;"
    )
      // Ảnh bài viết
      .inner-image(
        style="position:relative; overflow:hidden; width:100%; aspect-ratio:16/9; border-top-left-radius:16px; border-top-right-radius:16px;"
      )
        a(href=`/blogs/detail/${item.slug}`, style="display:block; width:100%; height:100%; overflow:hidden;")
          img(
            src=item.thumbnail, 
            alt=item.title, 
            style="width:100%; height:100%; object-fit:cover; transition:transform .6s ease; display:block;"
          )

      style.
        .blog-item:hover .inner-image img {
          transform: scale(1.08);
        }

      // Nội dung bài viết
      .inner-content.p-4.text-center.flex-grow-1.d-flex.flex-column.justify-content-between
        div
          small.fw-semibold(style="display:block; margin-bottom:8px; font-size:0.9rem; color:#6c63ff;")
            i.fa-solid.fa-folder-open.me-1
            | #{item.blog_category_id ? item.category : 'Chưa phân loại'}

          h5.mt-2.mb-3.fw-bold(style="color:#333; min-height:60px; line-height:1.3;")
            a(
              href=`/blogs/detail/${item.slug}`, 
              style="text-decoration:none; color:inherit;"
            ) #{item.title}

          p.text-muted(style="font-size:0.95rem; line-height:1.5; min-height:70px; margin-bottom:0;") #{item.summary}

        a.btn.btn-sm.mt-3.text-white.align-self-center(
          href=`/blogs/detail/${item.slug}`,
          style="background:linear-gradient(135deg,#6c63ff,#a64bf4); border:none; border-radius:12px; padding:8px 16px; font-weight:500;"
        )
          | Đọc thêm 
          i.fa-solid.fa-arrow-right.ms-1
