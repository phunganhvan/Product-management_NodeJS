block main 
    .container.my-3 
        .row 
            .col-12
                +box-head(titlePage)

        .row 
            .col-12 
                .chat(chat-id=user.id) 
                    .inner-body
                        each chat in chats
                            if(chat.infoUser.id != user.id)
                                .inner-incoming 
                                    .inner-name #{chat.infoUser.fullName}
                                    .inner-content #{chat.content}
                            else 
                                .inner-outgoing 
                                    .inner-content #{chat.content}

