extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main

    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center
            .col-8
                h1(class="text-center") Lấy lại mật khẩu
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    div(class="mb-3")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                        )
                    div(class="mb-3")
                        button(
                            type="submit"
                            class="btn btn-primary w-100"
                        ) Gửi mail xác nhận