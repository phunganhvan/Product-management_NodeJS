extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8.col-md-6.col-lg-4
                .card.shadow.p-4
                    h1.text-center.mb-4 Lấy lại mật khẩu
                    form(
                        action="/user/password/forgot"
                        method="POST"
                    )
                        .mb-3
                            label.form-label(for="email") Email
                            input#email.form-control(
                                type="email"
                                name="email"
                                required
                                placeholder="Nhập địa chỉ email của bạn"
                            )
                        button.btn.btn-primary.w-100.mt-3(type="submit")
                            i.bi.bi-envelope.me-2
                            | Gửi mail xác nhận
