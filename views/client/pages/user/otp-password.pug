extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Nhập mã OTP xác thực
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="mb-3")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                            value= email 
                            readonly 
                        )
                    div(class="mb-3")
                        label(for="otp") Mã OTP 
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required 
                        )
                    div(class= "mb-3")
                        button(
                            type="submit"
                            class="btn btn-primary w-100"
                        ) Xác nhận