extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đổi mật khẩu
                form(
                    action="/user/password/reset"
                    method="POST"
                )
                    div(class="mb-3")
                        label(for="password") Mật khẩu mới 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                        )
                    div(class="mb-3")
                        label(for="confirmPassword") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required 
                        )
                    div(class= "mb-3")
                        button(
                            type="submit"
                            class="btn btn-primary w-100"
                        ) Đổi mật khẩu