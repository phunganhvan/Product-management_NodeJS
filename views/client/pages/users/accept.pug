extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        include ../../partials/list-btn-user.pug

        .row 
            .col-12 
                +box-head(titlePage)
        
        .row 
            each user in users    
                .col-4 
                    div(
                        myId=user.id
                    )
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/admin/images/avatar.png")
                                alt= user.fullName
                            )
                        div(
                            class="inner-info"
                        )
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend= user.id 
                                ) Chấp nhận 
                                button(
                                    class="btn btn-sm btn-danger mr-1"
                                    btn-refuse-friend= user.id 
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend 
                                    disabled
                                ) Đã xóa 

block script 
    script( src="/js/usersFriend.js")