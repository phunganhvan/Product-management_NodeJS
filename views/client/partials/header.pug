include ../mixins/sub-menu.pug
header.header 
    .container 
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/ccccccc.jpg", alt="Logo") 
            .col-5
                form(
                    action= `/search`
                    method="GET"
                )
                    div(class="mb-3 d-flex")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa tìm kiếm..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submid"
                            class="btn btn-primary"
                        ) Tìm
            .col-4
                .inner-menu
                    ul 
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct= "/products"
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductCategory, pathProduct) 
                        li
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
                        li 
                            a(href="/user/register") Đăng kí